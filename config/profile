# Set TERM to support 256 colors
export TERM=xterm-256color

# Add local bin to path
export PATH="$HOME/.local/bin:$PATH"

# Include all files under profile.d
if [ -d ~/preferences/config/profile.d ]; then
        for rc in ~/preferences/config/profile.d/*; do
                if [ -f "$rc" ]; then
                        . "$rc"
                fi
        done
fi
unset rc
